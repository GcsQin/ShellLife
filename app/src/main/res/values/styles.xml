<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--<style name=""-->
    <style name="ActivityTitle">
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">30dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorActivityTitle</item>
        <item name="android:textColor">#f6faf6</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="rightMenuItem">
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="rightMenu_Img">
        <item name="android:paddingTop">19dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="radioButton_tabs">
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@drawable/selector_tabs_color</item>
        <item name="android:button">@null</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="PopupWindows_anim_style">
        <item name="android:windowEnterAnimation">@anim/anim_popup_enter</item>
        <item name="android:windowExitAnimation">@anim/anim_popup_hide</item>
    </style>
</resources>
