<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.ustb.shellbox.shelllife.alert_act.LinkCampusWebAct">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/act_login_logo"
        android:layout_marginTop="126dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageView" />
    <EditText
        android:gravity="center"
        android:id="@+id/et_alert_linkvolunteer_user"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Username"
        android:background="@drawable/shape_list_item_officialweb"
        android:layout_below="@+id/imageView"
        />
    <EditText
        android:gravity="center"
        android:id="@+id/et_alert_linkvolunteer_pass"
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="password"
        android:inputType="numberPassword"
        android:background="@drawable/shape_list_item_officialweb"
        android:layout_below="@+id/et_alert_linkvolunteer_user"
        />
    <Button
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_button_red"
        android:onClick="loginVolunteer"
        android:text="Login"
        android:textAllCaps="false"
        />
</RelativeLayout>
