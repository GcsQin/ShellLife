<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
     >
    <RelativeLayout
        android:paddingLeft="16dp"
        android:layout_width="match_parent" android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_zhiyuan_actinfo_name"
            android:textSize="28sp"
            android:text="北京科技大学青年志愿者协会汉字体验馆志愿活动讲解项目"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_zhiyuan_actinfo_name"
            android:id="@+id/tv_zhiyuan_actinfo_time"
            android:text="活动时间 : 2017-03-20 09:00 至 2017-03-20 17:00"
            />
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tb_zhiyuan_actinfo"
            android:paddingTop="5dp"
            android:layout_below="@+id/tv_zhiyuan_actinfo_time"
            >
            <TableRow>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#000000" android:text="计划人数"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#ff1a00" android:text="0人" android:id="@+id/tv_zhiyuan_actinfo_planNum"/>
            </TableRow>
            <TableRow>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#000000" android:text="参加人数"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#ff1a00" android:text="0人" android:id="@+id/tv_zhiyuan_actinfo_joinNum"/>
            </TableRow>
            <TableRow>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#000000" android:text="活动编号"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#dcd4d3" android:text="000000" android:id="@+id/tv_zhiyuan_actinfo_actNum"/>
            </TableRow>
            <TableRow>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#000000" android:text="活动类型"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#dcd4d3" android:text="type" android:id="@+id/tv_zhiyuan_actinfo_actType"/>
            </TableRow>
            <TableRow>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#000000" android:text="活动地点"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#dcd4d3" android:text="北京科技大学" android:id="@+id/tv_zhiyuan_actinfo_actLocation"/>
            </TableRow>
            <TableRow>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#000000" android:text="活动工时"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#dcd4d3" android:text="0工时" android:id="@+id/tv_zhiyuan_actinfo_actGongshi"/>
            </TableRow>
            <TableRow>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#000000" android:text="报名截止时间"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#dcd4d3" android:text="1979-01-01" android:id="@+id/tv_zhiyuan_actinfo_actDeadline"/>
            </TableRow>
            <TableRow>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#000000" android:text="活动简介"/>
            </TableRow>
            <TextView  android:lines="3" android:ellipsize="end" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#dcd4d3" android:text="introduce" android:id="@+id/tv_zhiyuan_actinfo_actIntroduce"/>
            <TableRow>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#000000" android:text="发起人"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#dcd4d3" android:text="000000" android:id="@+id/tv_zhiyuan_actinfo_actDuty"/>
            </TableRow>
        </TableLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tb_zhiyuan_actinfo"
            android:id="@+id/btn_zhiyuan_joinact"
            android:text="参加活动"
            android:textColor="#ffffff"
            android:background="@drawable/shape_button_red"
            />
    </RelativeLayout>
</RelativeLayout>