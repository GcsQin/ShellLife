<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageButton
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/cancle_32"
        android:background="@null"
        android:onClick="dialogDismiss"
        android:id="@+id/imgbtn_cancle_lib_dept"
        />
    <ListView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/shape_listview_frame_green"
        android:layout_below="@id/imgbtn_cancle_lib_dept"
        android:id="@+id/lv_dialog_lib_dept"
        >
    </ListView>
</RelativeLayout>
