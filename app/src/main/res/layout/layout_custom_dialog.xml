<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorDialogBackGround"
    android:padding="3dp"
    >
<!-- 对话框顶部边缘-->
    <ImageView
        android:layout_width="match_parent" android:layout_height="16dp" android:background="@drawable/shape_dialog_topedge"
      />
    <RelativeLayout
        android:layout_width="match_parent" android:layout_height="200dp"
         >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="@string/dialog_title_update"
            android:textSize="@dimen/dialog_title"
            android:textColor="@color/colorDialogTitleAndContent"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="修复了若干Bug,增加了一些新功能"
            android:gravity="center"
            android:textSize="@dimen/dialog_content"
            android:textColor="@color/colorDialogTitleAndContent"
            android:layout_centerInParent="true"
            />
        <!--<TextView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="1dp"-->
            <!--android:background="@color/colorDialogDividerBlue"-->
            <!--android:layout_above="@id/ll_dialog_content"-->
            <!--/>-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ll_dialog_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:background="@color/colorDialogDividerBlue"
            >
            <Button
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="更新"
                android:id="@+id/splash_btn_update"
                android:gravity="center"
                android:textSize="@dimen/dialog_content"
                android:background="@color/colorDialogBackGround"
                android:layout_marginRight="1dp"
                />
            <Button
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="取消"
                android:id="@+id/splash_btn_cancel"
                android:textSize="@dimen/dialog_content"
                android:gravity="center"
                android:background="@color/colorDialogBackGround"
                android:layout_marginLeft="1dp"
                />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorDialogDividerBlue"
            android:layout_above="@id/ll_dialog_content"
            />
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent" android:layout_height="8dp" android:background="@drawable/shape_dialog_buttomedge"
        />
</LinearLayout>
