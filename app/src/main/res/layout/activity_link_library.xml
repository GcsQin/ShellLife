<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.ustb.shellbox.shelllife.alert_act.LinkCampusWebAct">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/act_login_logo"
        android:layout_marginTop="126dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageView" />
    <EditText
        android:gravity="center"
        android:id="@+id/et_alert_linklib_user"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Username"
        android:background="@drawable/shape_list_item_officialweb"
        android:layout_below="@+id/imageView"
        />
    <EditText
        android:gravity="center"
        android:id="@+id/et_alert_linklib_pass"
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="password"
        android:inputType="numberPassword"
        android:background="@drawable/shape_list_item_officialweb"
        android:layout_below="@+id/et_alert_linklib_user"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_verification_code"
        android:layout_below="@+id/et_alert_linklib_pass"
        />
    <Button
        android:layout_marginTop="5dp"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="获取验证码"
        android:onClick="getVerificationCode"
        android:layout_alignRight="@id/et_alert_linklib_pass"
        android:layout_below="@id/et_alert_linklib_pass"
        android:background="@drawable/shape_list_item_officialweb"
        />
    <EditText
        android:layout_above="@+id/btn_alert_linklib"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        android:padding="5dp"
        android:id="@+id/et_lib_verification"
        android:textColorHint="#d4dad4"
        android:visibility="invisible"
        android:layout_marginBottom="4dp"
        android:hint="请输入验证码红色部分"
        android:gravity="center"
        android:background="@drawable/shape_dash_frame_bule"
        />
    <Button
        android:id="@+id/btn_alert_linklib"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_button_red"
        android:text="Login"
        android:textAllCaps="false"
        android:onClick="loginLib"
        />
</RelativeLayout>
